<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lottery_item"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">

    <ssp.tt.com.ssp.widgets.IconTextView
        android:id="@+id/tv_ticket_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="@string/icon_wallet"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dashboard_grid_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/tv_ticket_type_icon"
        android:layout_toLeftOf="@+id/tv_ticket_amount"
        android:layout_toRightOf="@+id/tv_ticket_type_icon"
        android:layout_toStartOf="@+id/tv_ticket_amount"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxxxxxxx"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_ticket_serious_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xxxxxxxxxx"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ticket_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xxxxxxxxxx"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ticket_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="111111111"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

</RelativeLayout>
