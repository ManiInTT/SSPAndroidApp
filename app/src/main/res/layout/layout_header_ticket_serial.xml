<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:baselineAligned="false"
    android:layout_marginBottom="10dp"
    android:padding="8dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_white_bg"
            android:gravity="center">

            <ssp.tt.com.ssp.widgets.IconTextView
                android:id="@+id/iconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_wallet"
                android:textColor="@android:color/white"
                android:textSize="@dimen/top_symbol" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="TICKET TYPE NAME"
            android:textColor="@color/ticket_name_clr"
            android:textSize="@dimen/button_text" />

        <TextView
            android:id="@+id/tv_draw_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="Draw Number"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/button_text" />

        <TextView
            android:id="@+id/tv_draw_on"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textColor="@color/ticket_name_clr"
            android:text="Draw On"
            android:textSize="@dimen/button_text" />

        <TextView
            android:id="@+id/tv_series"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text=""
            android:textSize="@dimen/button_text" />
    </LinearLayout>
</LinearLayout>
