<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@color/grey"
    android:gravity="center"
    android:orientation="vertical">

    <ssp.tt.com.ssp.widgets.IconTextView
        android:id="@+id/tv_ticket_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_wallet"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dashboard_grid_icon" />

    <TextView
        android:id="@+id/tv_ticket_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Akshaya"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Weekly"
        android:textSize="12sp" />
</LinearLayout>
