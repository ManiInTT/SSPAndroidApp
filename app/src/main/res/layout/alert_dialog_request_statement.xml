<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Request the account statement"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" * Requested statement will be send your registered email address"
            android:textColor="@color/ticket_serias_color"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_one_week"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_dialog_line"
            android:gravity="center"
            android:text="One week"
            android:textColor="@color/ticket_serias_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_one_month"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_dialog_line"
            android:gravity="center"
            android:text="One month"
            android:textColor="@color/ticket_serias_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_dialog_line"
            android:gravity="center"
            android:text="More"
            android:textColor="@color/ticket_serias_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:id="@+id/et_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="From"
                    android:inputType="text">


                </EditText>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/et_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="To"
                    android:inputType="text">


                </EditText>
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/alert_btn_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ok_btn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/cancel_btn"
                android:background="@drawable/alert_btn_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="OK"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
